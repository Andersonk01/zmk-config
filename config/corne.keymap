 * Layout de Programação para Corne Keyboard
 * ==========================================
 * Layer 0: Base QWERTY
 * Layer 1: Símbolos + Números
 * Layer 2: Navegação (Vim-style)
 * Layer 3: Numpad
 * Layer 4: F-keys + Mídia + Bluetooth
 * Layer 5: Mouse
 */

#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/pointing.h>

/ {
    behaviors {
        // Hold-tap: Toque = Space, Segura = Alt
        alt_spc: alt_space {
            compatible = "zmk,behavior-hold-tap";
            label = "ALT_SPACE";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick-tap-ms = <150>;
            flavor = "balanced";
            bindings = <&kp>, <&kp>;
        };

        // Hold-tap: Toque = Enter, Segura = Layer 2
        ent_l2: enter_layer2 {
            compatible = "zmk,behavior-hold-tap";
            label = "ENTER_LAYER2";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick-tap-ms = <150>;
            flavor = "balanced";
            bindings = <&mo>, <&kp>;
        };
    };

    macros {
        // Macro: Arrow Function () => {}
        arrow_fn: arrow_function {
            compatible = "zmk,behavior-macro";
            label = "ARROW_FUNCTION";
            #binding-cells = <0>;
            wait-ms = <10>;
            tap-ms = <10>;
            bindings = <&kp LPAR &kp RPAR &kp SPACE &kp EQUAL &kp GT &kp SPACE &kp LBRC &kp RBRC>;
        };

        // Macro: console.log()
        cons_log: console_log {
            compatible = "zmk,behavior-macro";
            label = "CONSOLE_LOG";
            #binding-cells = <0>;
            wait-ms = <10>;
            tap-ms = <10>;
            bindings = <&kp C &kp O &kp N &kp S &kp O &kp L &kp E &kp DOT &kp L &kp O &kp G &kp LPAR &kp RPAR>;
        };

        // Macro: Comentário de bloco /* */
        comment_blk: comment_block {
            compatible = "zmk,behavior-macro";
            label = "COMMENT_BLOCK";
            #binding-cells = <0>;
            wait-ms = <10>;
            tap-ms = <10>;
            bindings = <&kp FSLH &kp ASTRK &kp SPACE &kp SPACE &kp ASTRK &kp FSLH &kp LEFT &kp LEFT &kp LEFT>;
        };
    };

    combos {
        compatible = "zmk,combos";

        // Combo: Ctrl+C (Copy) - Pressiona C + V juntos
        combo_copy {
            bindings = <&kp LC(C)>;
            key-positions = <27 28>;  // C + V
            timeout-ms = <50>;
            layers = <0>;
        };

        // Combo: Ctrl+V (Paste) - Pressiona V + B juntos
        combo_paste {
            bindings = <&kp LC(V)>;
            key-positions = <28 29>;  // V + B
            timeout-ms = <50>;
            layers = <0>;
        };

        // Combo: Ctrl+Z (Undo) - Pressiona Z + X juntos
        combo_undo {
            bindings = <&kp LC(Z)>;
            key-positions = <25 26>;  // Z + X
            timeout-ms = <50>;
            layers = <0>;
        };

        // Combo: Ctrl+Y (Redo) - Pressiona X + C juntos
        combo_redo {
            bindings = <&kp LC(Y)>;
            key-positions = <26 27>;  // X + C
            timeout-ms = <50>;
            layers = <0>;
        };

        // Combo: Ctrl+S (Save) - Pressiona S + D juntos
        combo_save {
            bindings = <&kp LC(S)>;
            key-positions = <14 15>;  // S + D
            timeout-ms = <50>;
            layers = <0>;
        };

        // Combo: Ctrl+A (Select All) - Pressiona A + S juntos
        combo_select_all {
            bindings = <&kp LC(A)>;
            key-positions = <13 14>;  // A + S
            timeout-ms = <50>;
            layers = <0>;
        };

        // Combo: Ctrl+/ (Comment Line - VS Code) - Pressiona Q + W juntos
        combo_comment {
            bindings = <&kp LC(FSLH)>;
            key-positions = <1 2>;  // Q + W
            timeout-ms = <50>;
            layers = <0>;
        };

        // Combo: Ctrl+F (Find) - Pressiona F + G juntos
        combo_find {
            bindings = <&kp LC(F)>;
            key-positions = <16 17>;  // F + G
            timeout-ms = <50>;
            layers = <0>;
        };

        // Combo: ESC rápido - Pressiona J + K juntos
        combo_esc {
            bindings = <&kp ESC>;
            key-positions = <19 20>;  // J + K
            timeout-ms = <50>;
            layers = <0>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        // =====================================================================
        // Layer 0: Base QWERTY
        // =====================================================================
        default_layer {
            display-name = "Base";
// -----------------------------------------------------------------------------------------
// | TAB  |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U  |  I  |  O  |  P  | BSPC |
// | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J  |  K  |  L  |  ;  |  '   |
// | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M  |  ,  |  .  |  /  | ESC  |
//                    | GUI | L1  |ALT/SPC|   |ENT/L2| BSPC| L3  |
            bindings = <
   &kp TAB   &kp Q &kp W &kp E &kp R &kp T   &kp Y &kp U  &kp I     &kp O   &kp P    &kp BSPC
   &kp LCTRL &kp A &kp S &kp D &kp F &kp G   &kp H &kp J  &kp K     &kp L   &kp SEMI &kp SQT
   &kp LSHFT &kp Z &kp X &kp C &kp V &kp B   &kp N &kp M  &kp COMMA &kp DOT &kp FSLH &kp ESC
            &kp LGUI &mo 1 &alt_spc LALT SPACE   &ent_l2 2 RET &kp BSPC &mo 3
            >;
        };

        // =====================================================================
        // Layer 1: Símbolos e Números (Programação)
        // =====================================================================
        symbols_layer {
            display-name = "Symbols";
// -----------------------------------------------------------------------------------------
// |  `   |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | DEL  |
// |      |  1  |  2  |  3  |  4  |  5  |   |  -  |  =  |  [  |  ]  |  \  |  `   |
// |      |  6  |  7  |  8  |  9  |  0  |   |  _  |  +  |  {  |  }  |  |  |  ~   |
//                    |     |     |     |   |     |     | L4  |
            bindings = <
   &kp GRAVE &kp EXCL &kp AT &kp HASH &kp DLLR &kp PRCNT   &kp CARET &kp AMPS  &kp ASTRK &kp LPAR &kp RPAR &kp DEL
   &trans    &kp N1   &kp N2 &kp N3   &kp N4   &kp N5      &kp MINUS &kp EQUAL &kp LBKT  &kp RBKT &kp BSLH &kp GRAVE
   &trans    &kp N6   &kp N7 &kp N8   &kp N9   &kp N0      &kp UNDER &kp PLUS  &kp LBRC  &kp RBRC &kp PIPE &kp TILDE
                             &trans   &trans   &trans      &trans    &trans    &mo 4
            >;
        };

        // =====================================================================
        // Layer 2: Navegação (Vim-style HJKL)
        // =====================================================================
        navigation_layer {
            display-name = "Nav";
// -----------------------------------------------------------------------------------------
// | ESC  |     |     |     |     |     |   |     | HOME| PGDN| PGUP| END |      |
// |      |     |     |     |     |     |   | LEFT| DOWN|  UP |RIGHT|     |      |
// |      |UNDO |CUT  |COPY |PASTE|     |   |     |     |     |     |     |      |
//                    |     |     |     |   |     |     |     |
            bindings = <
   &kp ESC &trans    &trans    &trans    &trans    &trans      &trans   &kp HOME &kp PG_DN &kp PG_UP &kp END   &trans
   &trans  &trans    &trans    &trans    &trans    &trans      &kp LEFT &kp DOWN &kp UP    &kp RIGHT &trans    &trans
   &trans  &kp LC(Z) &kp LC(X) &kp LC(C) &kp LC(V) &trans      &trans   &trans   &trans    &trans    &trans    &trans
                               &trans    &trans    &trans      &trans   &trans   &mo 5
            >;
        };

        // =====================================================================
        // Layer 3: Numpad
        // =====================================================================
        numpad_layer {
            display-name = "Numpad";
// -----------------------------------------------------------------------------------------
// |      |     |     |     |     |     |   |  /  |  7  |  8  |  9  |  -  |      |
// |      |     |     |     |     |     |   |  *  |  4  |  5  |  6  |  +  |      |
// |      |     |     |     |     |     |   |  0  |  1  |  2  |  3  |  .  | ENT  |
//                    |     | L0  |     |   |     |     |     |
            bindings = <
   &trans &trans &trans &trans &trans &trans   &kp FSLH &kp N7 &kp N8 &kp N9 &kp MINUS &trans
   &trans &trans &trans &trans &trans &trans   &kp ASTRK &kp N4 &kp N5 &kp N6 &kp PLUS &trans
   &trans &trans &trans &trans &trans &trans   &kp N0   &kp N1 &kp N2 &kp N3 &kp DOT  &kp RET
                        &trans &to 0  &trans   &trans   &trans &trans
            >;
        };

        // =====================================================================
        // Layer 4: F-keys, Mídia e Bluetooth
        // =====================================================================
        fkeys_layer {
            display-name = "F-keys";
// -----------------------------------------------------------------------------------------
// |  F1  |  F2 |  F3 |  F4 |  F5 |  F6 |   |  F7 |  F8 |  F9 | F10 | F11 | F12  |
// |      |PREV |NEXT |VOL- |VOL+ |PLAY |   |     |     |     |     |     |      |
// |BTCLR | BT1 | BT2 | BT3 | BT4 | BT5 |   |ARRFN|CLOG |CMBLK|     |     | L0   |
//                    |     |     |     |   |     |     |     |
            bindings = <
   &kp F1     &kp F2       &kp F3       &kp F4       &kp F5       &kp F6         &kp F7     &kp F8    &kp F9      &kp F10 &kp F11 &kp F12
   &trans     &kp C_PREV   &kp C_NEXT   &kp C_VOL_DN &kp C_VOL_UP &kp C_PP       &trans     &trans    &trans      &trans  &trans  &trans
   &bt BT_CLR &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4   &arrow_fn  &cons_log &comment_blk &trans &trans  &to 0
                                        &trans       &trans       &trans         &trans     &trans    &trans
            >;
        };

        // =====================================================================
        // Layer 5: Mouse
        // =====================================================================
        mouse_layer {
            display-name = "Mouse";
// -----------------------------------------------------------------------------------------
// |      |     |     |     |     |     |   |     |     |     |     |     |      |
// |      |     |     |     |     |     |   | M_L | M_D | M_U | M_R |     |      |
// |      |     |     |     |     |     |   |LCLK |MCLK |RCLK |SC_U |SC_D | L0   |
//                    |     |     |     |   |     |     |     |
            bindings = <
   &trans &trans &trans &trans &trans &trans   &trans          &trans          &trans          &trans           &trans          &trans
   &trans &trans &trans &trans &trans &trans   &mmv MOVE_LEFT  &mmv MOVE_DOWN  &mmv MOVE_UP    &mmv MOVE_RIGHT  &trans          &trans
   &trans &trans &trans &trans &trans &trans   &mkp LCLK       &mkp MCLK       &mkp RCLK       &msc SCRL_UP     &msc SCRL_DOWN  &to 0
                        &trans &trans &trans   &trans          &trans          &trans
            >;
        };
    };
};
